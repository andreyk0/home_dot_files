:set prompt "\ESC[34mÎ» \ESC[m"

:set +t
:set -XForeignFunctionInterface
:set -XNoMonomorphismRestriction
:set -XOverloadedStrings
:set -XQuasiQuotes
:set -fno-print-bind-result
:set -fno-warn-type-defaults

:def he \str -> return $ ":! hoogle --count=20 \'" ++ (concatMap (\c -> if '\'' == c then "'\"'\"'" else [c]) str) ++ "\' | less -SX"
