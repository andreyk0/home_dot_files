[core]
	excludesfile = ~/.gitignore
	editor = vim

[color]
	diff = auto
	branch = auto
	status = auto

[push]
	default = tracking

[alias]
	ci = !git commit
	ca = !git commit --amend
	dh = !git diff HEAD
	lg = !git log --graph
	lgg = !git log --graph --pretty='format:"%C(yellow)%h %Creset%C(cyan)%G? %GK%Creset %C(green)%ae%Creset %<(80,trunc)%s"'
	rh = !git reset --hard
	ri = !git rebase --no-gpg-sign -i
	st = !git status
	up = ! git fetch --tags -p &&  git-delete-merged-branches && git status
	wdiff = !git diff --color-words

[diff]
	tool = meld
	ignoreSubmodules = dirty

[commit]
	gpgsign = true
	template = ~/.git_commit_template

