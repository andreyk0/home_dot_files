[core]
  excludesfile = ~/.gitignore
	editor = vim

[color]
  diff = auto
  branch = auto
  status = auto

[user]
  # export GIT_AUTHOR_NAME="Andrey Kartashov"
  # export GIT_AUTHOR_EMAIL="andrey.kartashov@gmail.com"
  # export GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
  # export GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"

[push]
  default = tracking

[alias]
  #datetag = !git tag `date \"+%Y-%m-%d-%H%M%S\"`
  #rctag = !git tag `date \"+%Y-%m-%d-%H%M%S\"`-rc
  #livetag = !git tag `date \"+%Y-%m-%d-%H%M%S\"`-live

  rtag = !git tag r`date \"+%Y-%m-%d-%H%M%S\"`
  st = !git status
  up = !git fetch --tags -p && git-delete-merged-branches && git status
  ci = !git commit
  wdiff = !git diff --color-words

[diff]
  tool = vimdiff
	ignoreSubmodules = dirty


[commit]
  template = ~/.git_commit_template

