[core]
	excludesfile = ~/.gitignore
	editor = vim

[color]
	diff = auto
	branch = auto
	status = auto

[push]
	default = tracking

[alias]
	ci = !git commit
	db = !git diff origin/development
	dh = !git diff HEAD
	dm = !git diff origin/master
	dtag = !git tag r`date \"+%Y-%m-%d-%H%M%S\"`
	lg = !git log --graph
	lgg = !git log --graph --pretty='format:"%C(yellow)%h %Creset%C(cyan)%G? %GK%Creset %C(green)%ae%Creset %<(80,trunc)%s"'
	rhd = !git reset --hard origin/development
	rhm = !git reset --hard origin/master
	rid = !git rebase -i origin/development
	rim = !git rebase -i origin/master
	st = !git status
	up = ! git fetch --tags -p &&  git-delete-merged-branches && git status
	wdiff = !git diff --color-words

[diff]
	tool = meld
	ignoreSubmodules = dirty

[commit]
	gpgsign = true
	template = ~/.git_commit_template

