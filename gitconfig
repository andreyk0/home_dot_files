[core]
	excludesfile = ~/.gitignore
	editor = vim

[color]
	diff = auto
	branch = auto
	status = auto

[push]
	default = tracking

[alias]
	a   = !git-add-default
	ba  = !git branch -a
	b   = !git branch
	ca  = !git commit --amend
	C   = !git clean -fdx .
	ci  = !git commit
	co  = !git checkout
	dd  = !git diff origin/$(git-default-branch)
	dds = !git diff --ignore-all-space origin/$(git-default-branch)
	d   = !git diff
	dh  = !git diff HEAD
	dhs = !git diff --ignore-all-space HEAD
	do  = !git diff origin/$(git branch --show-current)
	dos = !git diff --ignore-all-space origin/$(git branch --show-current)
	ds  = !git diff --ignore-all-space
	lgg = !git log --graph --pretty='format:"%C(yellow)%h %Creset%C(cyan)%G? %GK%Creset %C(green)%ae%Creset %<(80,trunc)%s"'
	lg  = !git log --graph
	pF  = !git push --force-with-lease
	p   = !git push
	rhd = !git reset --hard origin/$(git-default-branch)
	rh  = !git reset --hard
	rid = !git rebase -i origin/$(git-default-branch)
	ri  = !git rebase -i
	s   = !git status
	u   = !git pull
	up  = !git fetch --tags -p &&  git-delete-merged-branches && git status
	wd  = !git diff --color-words
	wip = !git commit -amwip

[diff]
	tool = meld
	ignoreSubmodules = dirty

[commit]
	gpgsign = true
	template = ~/.git_commit_template

